    <style>
        /* CSS for animated bouncing loader. */
        .loader {
            display: flex;
            justify-content: center;
            align-items: center;
            position: fixed;
            top: 50%;
            right: 50%;
            transform: translate(50%,-50%);
            background: rgba(255,255,255,0.1);
            z-index: 100;
            width: 100vw;
            height: 100vh;
            transform-style: preserve-3d;
        }

            /* Loader circles */
            .loader > span {
                background: #FAD000;
                border-radius: 50%;
                margin: 5rem 0.5rem;
                box-shadow: 2px 2px gold;
                animation: bouncingLoader 1s infinite alternate;
            }

                .loader > span:nth-child(2) {
                    animation-delay: 0.2s;
                }

                .loader > span:nth-child(3) {
                    animation-delay: 0.4s;
                }

        /* Define the animation called bouncingLoader. */
        @@keyframes bouncingLoader {
            0% {
                width: 1rem;
                height: 1rem;
                transform: translate3d(0);
                background: #2e3192;
            }

            50% {
                background-color: #f2b0a2;
            }

            100% {
                width: 4rem;
                height: 4rem;
                transform: translate3d(0, -1rem, 0);
                background: #a0e2fa;
            }
        }

        @@keyframes hide {
            0% {
                opacity: 1.0;
            }

            100% {
                opacity: 0.0;
            }
        }
    </style>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
